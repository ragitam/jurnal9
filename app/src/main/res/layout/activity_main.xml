<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tan_background"
        android:orientation="vertical">


        <TextView
            android:id="@+id/ternak"
            style="@style/CategoryStyle"
            android:background="@color/category_ternak"
            android:text="@string/category_ternak" />

        <TextView
            android:id="@+id/hutan"
            style="@style/CategoryStyle"
            android:background="@color/category_hutan"
            android:text="@string/category_hutan"/>


        <TextView
            android:id="@+id/langka"
            style="@style/CategoryStyle"
            android:background="@color/category_langka"
            android:text="@string/category_langka" />

        <TextView
            android:id="@+id/laut"
            style="@style/CategoryStyle"
            android:background="@color/category_laut"
            android:text="@string/category_laut" />

    </LinearLayout>

</ScrollView>


